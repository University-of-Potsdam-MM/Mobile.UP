<!-- Start Header -->
<div data-role="header" data-position="fixed" data-tap-toggle="false">
    <a href="#" data-role="button" data-icon="false" data-inline="true" data-transition="slidefade" data-direction="reverse" class="menubutton">Menue</a>
    <a href="#campus" data-role="button" data-icon="false" data-inline="true" data-transition="slidefade" data-direction="reverse" class="back">Back</a>
    <h1>Fahrten planen
    <%  if(store.get('up.session.authenticated')){ %>
        <span class="username-header nooptions"><%= store.get('up.session.username') %></span><a href="#options" class="settings" data-role="button" data-icon="logout-blue" title="logout" alt="logout"></a></h1>
    <%  }else{ %>
        <a href="#options" class="settings" data-role="button" data-icon="login-blue" title="login" alt="login"></a></h1>
    <%  } %>
</div>
<!-- End Header -->
<!-- Start Main - Navigation -->
<div data-role="content" data-theme="c">

    <div data-role="navbar">
        <ul>
            <li><a href="#transport" data-role="button" data-transition="none">N&auml;chste Abfahrten</a></li>
            <li><a href="#transport2" data-role="button" data-transition="none" class="ui-btn-active">Fahrt planen</a></li>
        </ul>
    </div>

    <div id="complexTransport">
        <!-- Fahrt eingeben -->
        <div id="fromStation2" data-role="navbar" class="buttons_pt">
            <ul>
                <li><p>VON:</p></li>
                <li><a href="#" class="ui-btn-active">G-see</a></li>
                <li><a href="#">Golm</a></li>
                <li><a href="#">Palais</a></li>
            </ul>
        </div>
        <div id="toStation2" data-role="navbar" class="buttons_pt route">
            <ul>
                <li><p>Nach:</p></li>
                <li><a href="#">G-see</a></li>
                <li><a href="#">Golm</a></li>
                <li><a href="#" class="ui-btn-active">Palais</a></li>
            </ul>
        </div>
        <div data-role="navbar" class="buttons_pt route">
            <ul>
                <li><p></p></li>
                <li>
                    <select name="flip-1" id="flip-1" data-role="slider">
                        <option value="off">Abfahrt</option>
                        <option value="on">Ankunft</option>
                    </select>
                </li>
                <li>
                    <input name="transportationDate" id="transportationDate" type="date" value="Heute" data-role="datebox" data-options='{"mode":"calbox", "useFocus": true}'>
                </li>
                <li>
                    <input name="transportationTime" id="transportationTime" type="date" value="Jetzt" data-role="datebox" data-options='{"mode": "timebox", "useFocus": true, "useLang": "de"}'>
                </li>
            </ul>
        </div>

        <div data-role="navbar" class="buttons_pt route submit-route">
            <ul>
                <li>&nbsp;</li>
                <li>&nbsp;</li>
                <li>
                    <input id="searchButton" type="submit" value="Suchen" class="submit-fahrt" data-theme="a"/>
                </li>
            </ul>
        </div>

        <div id="result">
            <!--  <div id="summary">
            <p>Fahrt von <span class='fromCampus'>Campus Griebnitzsee</span> nach</p>
            <p class='toCampus'>Campus Golm</p>
            <p class="arrivalMode">Abfahrt</p>
            <p class='when'>Heute, 10.02.2234,  11:15</p>
            </div> -->
            <div class="spaeter scrollbutton" >
                <input id="earlierButton" data-theme="a" type="submit" value="← Früher" />
            </div>

            <div data-role="collapsible-set" data-theme="c" data-collapsed="false" data-iconpos="right" data-collapsed-icon="arrow-down" data-expanded-icon="arrow-up" data-inset="true" id="transport_rides"></div>


            <div class="spaeter scrollbutton" >
                <input id="laterButton" type="submit" data-theme="a" value="Später →" />
            </div>
        </div>
        <!-- end #result -->
    </div> <!-- end #complexTransport -->
</div> <!-- end content -->